<h1>Add a Goal</h1>

<form action="<%= goals_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>Title
    <input type="text" name="goal[title]" value="<%= @goal.title %>">
  </label>

  <label>Description
    <textarea name="goal[description]" rows="8" cols="40"><%= @goal.description %></textarea>
  </label>

<label> Private
  <input type="radio" name="goal[private]" value="private">
</label>
<label> Public
  <input type="radio" name="goal[private]" value="public">
</label>

  <input type="submit" value="Create Goal">
</form>
